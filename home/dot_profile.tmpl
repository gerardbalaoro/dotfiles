# ~/.profile: executed by the command interpreter for login shells.
# This file is not read by bash(1), if ~/.bash_profile or ~/.bash_login
# exists.
# see /usr/share/doc/bash/examples/startup-files for examples.
# the files are located in the bash-doc package.

# the default umask is set in /etc/profile; for setting the umask
# for ssh logins, install and configure the libpam-umask package.
#umask 022

# add the user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

# if snap is installed, add snap bin to PATH
if command -v snap >/dev/null; then
    PATH="/snap/bin:$PATH"
fi

# if using NVM
export NVM_DIR="$HOME/.nvm"
if [ -d $NVM_DIR ] ; then
    [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh" 
    [ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"
fi

# if using PNPM
export PNPM_HOME="$HOME/.local/share/pnpm"
if [ -d $PNPM_HOME ] ; then
    case ":$PATH:" in
    *":$PNPM_HOME:"*) ;;
    *) export PATH="$PNPM_HOME:$PATH" ;;
    esac
fi

# if using Bun
export BUN_INSTALL="$HOME/.bun"
if [ -d $BUN_INSTALL ] ; then
    export PATH="$BUN_INSTALL/bin:$PATH"
fi

# if using OpenCode
export OPENCODE_DIR="$HOME/.opencode"
if [ -d $OPENCODE_DIR ] ; then
    export PATH="$OPENCODE_DIR/bin:$PATH"
fi

{{- if eq .chezmoi.os "linux" }}
{{- if (.chezmoi.kernel.osrelease | lower | contains "microsoft") }}

# initialize 1Password CLI from Windows
alias op=op.exe
{{- end }}
{{- end }}

{{- if eq .chezmoi.os "darwin" }}

# initialize Homebrew
if command -v brew >/dev/null; then
    BREW_PATH=$(command -v brew)

    if [ -n "$BREW_PATH" ] && [ -f "$BREW_PATH" ]; then
        eval "$($BREW_PATH shellenv)"

        BREW_PREFIX=$($BREW_PATH --prefix)
        BREW_USER=$(stat -f %Su "$BREW_PREFIX")

        if [ -n "$BREW_PREFIX" ] && [ "$BREW_USER" != "$USER" ]; then
            brew() {
                echo "Running brew as $BREW_USER"
                sudo -Hu "$BREW_USER" "$BREW_PATH" "$@";
            }
        fi
    fi
fi
{{- end }}

# initialize oh-my-posh
if command -v oh-my-posh >/dev/null; then
    OH_MY_POSH_CONFIG="~/.config/oh-my-posh/main.omp.json"
    if [ -n "$BASH_VERSION" ]; then
        eval "$(oh-my-posh init bash --config $OH_MY_POSH_CONFIG)"
    fi
    if [ -n "$ZSH_VERSION" ]; then
        eval "$(oh-my-posh init zsh --config $OH_MY_POSH_CONFIG)"
    fi
fi

# visual studio code
if command -v code >/dev/null; then
    export EDITOR=code
fi